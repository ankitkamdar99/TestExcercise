@using (Html.BeginForm("CalculateNumberToWords", "Home", FormMethod.Post))
{
    <div class="row" style="margin-left:10%;margin-top:10%">

        <div class="col-md-4">
            <label>Please Enter Number:</label>
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.Number)
            <div style="color:red;font-weight:bold;">
                @Html.ValidationMessageFor(model => model.Number)
            </div>
        </div>
    </div>
    <br/>
    <div class="row" style="margin-left:10%;">
        @if (!string.IsNullOrEmpty(Model.Words))
        {
            <b>@Model.Words</b>
        }

        <br />
        <br />
        <div style="text-align:center;">
            <input type="submit" id="submit-button" class="" value="Submit" name="submit-button" />
        </div>

    </div>
}
